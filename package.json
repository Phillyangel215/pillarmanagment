{
  "name": "nonprofit-enterprise-management",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Enterprise Nonprofit Management System with HIPAA compliance and role-based access control",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:pages": "CI=1 VITE_DEMO=1 VITE_BASE=/ npm run build && cp dist/index.html dist/404.html",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc -b --noEmit",
    "test": "vitest",
    "preview": "vite preview",
    "supabase:check": "node scripts/check-supabase.js",
    "supabase:setup": "echo 'See SUPABASE_SETUP.md for setup instructions'",
    "domain:setup": "node scripts/setup-domain.js setup",
    "domain:check": "node scripts/setup-domain.js check"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.1.2",
    "signature_pad": "^5.0.10",
    "tailwind-merge": "^2.5.4",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.7.0",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.7",
    "eslint": "^9.15.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-security": "^3.0.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^4.0.0-beta.7",
    "typescript": "~5.6.2",
    "vite": "^6.0.1",
    "vitest": "^2.1.4"
  }
}
